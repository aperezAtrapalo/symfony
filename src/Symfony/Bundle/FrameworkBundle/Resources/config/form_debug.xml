<?xml version="1.0" ?>

<container xmlns="http://makhan.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://makhan.com/schema/dic/services http://makhan.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="form.resolved_type_factory" class="Makhan\Component\Form\Extension\DataCollector\Proxy\ResolvedTypeFactoryDataCollectorProxy">
            <argument type="service">
                <service class="Makhan\Component\Form\ResolvedFormTypeFactory" />
            </argument>
            <argument type="service" id="data_collector.form" />
        </service>

        <!-- DataCollectorTypeExtension -->
        <service id="form.type_extension.form.data_collector" class="Makhan\Component\Form\Extension\DataCollector\Type\DataCollectorTypeExtension">
            <tag name="form.type_extension" extended-type="Makhan\Component\Form\Extension\Core\Type\FormType" />
            <argument type="service" id="data_collector.form" />
        </service>

        <!-- DataCollector -->
        <service id="data_collector.form.extractor" class="Makhan\Component\Form\Extension\DataCollector\FormDataExtractor" />

        <service id="data_collector.form" class="Makhan\Component\Form\Extension\DataCollector\FormDataCollector">
            <tag name="data_collector" template="@WebProfiler/Collector/form.html.twig" id="form" priority="310" />
            <argument type="service" id="data_collector.form.extractor" />
        </service>
    </services>
</container>
