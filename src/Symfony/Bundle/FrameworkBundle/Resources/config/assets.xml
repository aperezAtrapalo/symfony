<?xml version="1.0" ?>

<container xmlns="http://makhan.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://makhan.com/schema/dic/services http://makhan.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="assets.packages" class="Makhan\Component\Asset\Packages">
            <argument type="service" id="assets.empty_package" /> <!-- default package -->
            <argument type="collection" /> <!-- named packages -->
        </service>

        <service id="assets.empty_package" class="Makhan\Component\Asset\Package" public="false">
            <argument type="service" id="assets.empty_version_strategy" />
        </service>

        <service id="assets.context" class="Makhan\Component\Asset\Context\RequestStackContext">
            <argument type="service" id="request_stack" />
        </service>

        <service id="assets.path_package" class="Makhan\Component\Asset\PathPackage" abstract="true">
            <argument /> <!-- base path -->
            <argument type="service" /> <!-- version strategy -->
            <argument type="service" id="assets.context" />
        </service>

        <service id="assets.url_package" class="Makhan\Component\Asset\UrlPackage" abstract="true">
            <argument /> <!-- base URLs -->
            <argument type="service" /> <!-- version strategy -->
            <argument type="service" id="assets.context" />
        </service>

        <service id="assets.static_version_strategy" class="Makhan\Component\Asset\VersionStrategy\StaticVersionStrategy" abstract="true">
            <argument /> <!-- version -->
            <argument /> <!-- format -->
        </service>

        <service id="assets.empty_version_strategy" class="Makhan\Component\Asset\VersionStrategy\EmptyVersionStrategy" public="false" />

    </services>
</container>
