<?xml version="1.0" ?>

<container xmlns="http://makhan.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://makhan.com/schema/dic/services http://makhan.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="security.csrf.token_generator" class="Makhan\Component\Security\Csrf\TokenGenerator\UriSafeTokenGenerator" public="false" />

        <service id="security.csrf.token_storage" class="Makhan\Component\Security\Csrf\TokenStorage\SessionTokenStorage" public="false">
            <argument type="service" id="session" />
        </service>

        <service id="security.csrf.token_manager" class="Makhan\Component\Security\Csrf\CsrfTokenManager">
            <argument type="service" id="security.csrf.token_generator" />
            <argument type="service" id="security.csrf.token_storage" />
        </service>
    </services>
</container>
