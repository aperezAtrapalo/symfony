<?xml version="1.0" ?>

<container xmlns="http://makhan.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://makhan.com/schema/dic/services http://makhan.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="event_dispatcher" class="Makhan\Component\EventDispatcher\ContainerAwareEventDispatcher">
            <argument type="service" id="service_container" />
        </service>

        <service id="http_kernel" class="Makhan\Component\HttpKernel\HttpKernel">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="controller_resolver" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="argument_resolver" />
        </service>

        <service id="request_stack" class="Makhan\Component\HttpFoundation\RequestStack" />

        <service id="cache_warmer" class="Makhan\Component\HttpKernel\CacheWarmer\CacheWarmerAggregate">
            <argument type="collection" />
        </service>

        <service id="kernel.class_cache.cache_warmer" class="Makhan\Bundle\FrameworkBundle\CacheWarmer\ClassCacheCacheWarmer">
            <tag name="kernel.cache_warmer" />
        </service>

        <service id="cache_clearer" class="Makhan\Component\HttpKernel\CacheClearer\ChainCacheClearer">
            <argument type="collection" />
        </service>

        <service id="service_container" synthetic="true">
            <autowiring-type>Makhan\Component\DependencyInjection\ContainerInterface</autowiring-type>
            <autowiring-type>Makhan\Component\DependencyInjection\Container</autowiring-type>
        </service>

        <service id="kernel" synthetic="true" />

        <service id="filesystem" class="Makhan\Component\Filesystem\Filesystem" />

        <service id="file_locator" class="Makhan\Component\HttpKernel\Config\FileLocator">
            <argument type="service" id="kernel" />
            <argument>%kernel.root_dir%/Resources</argument>
        </service>

        <service id="uri_signer" class="Makhan\Component\HttpKernel\UriSigner">
            <argument>%kernel.secret%</argument>
        </service>

        <service id="config_cache_factory" class="Makhan\Component\Config\ResourceCheckerConfigCacheFactory">
            <argument type="collection"></argument>
        </service>

        <service class="Makhan\Component\Config\Resource\SelfCheckingResourceChecker" public="false">
            <tag name="config_cache.resource_checker" priority="-990" />
        </service>

    </services>
</container>
