        </service>
        <service id="form.type.currency" class="Makhan\Component\Form\Extension\Core\Type\CurrencyType">
            <deprecated>The "%service_id%" service is deprecated since Makhan 3.1 and will be removed in 4.0.</deprecated>
        </service>

        <!-- FormTypeHttpFoundationExtension -->
        <service id="form.type_extension.form.http_foundation" class="Makhan\Component\Form\Extension\HttpFoundation\Type\FormTypeHttpFoundationExtension">
            <argument type="service" id="form.type_extension.form.request_handler" />
            <tag name="form.type_extension" extended-type="Makhan\Component\Form\Extension\Core\Type\FormType" />
        </service>

        <!-- HttpFoundationRequestHandler -->
        <service id="form.type_extension.form.request_handler" class="Makhan\Component\Form\Extension\HttpFoundation\HttpFoundationRequestHandler" public="false">
            <argument type="service" id="form.server_params" />
        </service>

        <service id="form.server_params" class="Makhan\Component\Form\Util\ServerParams" public="false">
            <argument type="service" id="request_stack" />
        </service>

        <!-- FormTypeValidatorExtension -->
        <service id="form.type_extension.form.validator" class="Makhan\Component\Form\Extension\Validator\Type\FormTypeValidatorExtension">
            <tag name="form.type_extension" extended-type="Makhan\Component\Form\Extension\Core\Type\FormType" />
            <argument type="service" id="validator" />
        </service>
        <service id="form.type_extension.repeated.validator" class="Makhan\Component\Form\Extension\Validator\Type\RepeatedTypeValidatorExtension">
            <tag name="form.type_extension" extended-type="Makhan\Component\Form\Extension\Core\Type\RepeatedType" />
        </service>
        <service id="form.type_extension.submit.validator" class="Makhan\Component\Form\Extension\Validator\Type\SubmitTypeValidatorExtension">
            <tag name="form.type_extension" extended-type="Makhan\Component\Form\Extension\Core\Type\SubmitType" />
        </service>
    </services>
</container>
