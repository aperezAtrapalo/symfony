<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://makhan.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:sec="http://makhan.com/schema/dic/security"
           xsi:schemaLocation="http://makhan.com/schema/dic/services http://makhan.com/schema/dic/services/services-1.0.xsd">

    <sec:config>
        <sec:providers>
            <sec:default id="foo"/>
        </sec:providers>
        <sec:firewall name="main">
            <sec:form-login/>
            <sec:remember-me secret="TheSecret" catch-exceptions="false" token-provider="token_provider_id" />
        </sec:firewall>
    </sec:config>

</container>
