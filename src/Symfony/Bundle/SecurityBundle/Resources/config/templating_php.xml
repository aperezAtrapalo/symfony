<?xml version="1.0" ?>

<container xmlns="http://makhan.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://makhan.com/schema/dic/services http://makhan.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="templating.helper.logout_url" class="Makhan\Bundle\SecurityBundle\Templating\Helper\LogoutUrlHelper">
            <tag name="templating.helper" alias="logout_url" />
            <argument type="service" id="security.logout_url_generator" />
        </service>

        <service id="templating.helper.security" class="Makhan\Bundle\SecurityBundle\Templating\Helper\SecurityHelper">
            <tag name="templating.helper" alias="security" />
            <argument type="service" id="security.authorization_checker" on-invalid="ignore" />
        </service>
    </services>
</container>
