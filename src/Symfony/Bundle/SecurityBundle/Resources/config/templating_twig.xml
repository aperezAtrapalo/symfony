<?xml version="1.0" ?>

<container xmlns="http://makhan.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://makhan.com/schema/dic/services http://makhan.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="twig.extension.logout_url" class="Makhan\Bridge\Twig\Extension\LogoutUrlExtension" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="security.logout_url_generator" />
        </service>

        <service id="twig.extension.security" class="Makhan\Bridge\Twig\Extension\SecurityExtension" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="security.authorization_checker" on-invalid="ignore" />
        </service>
    </services>
</container>
