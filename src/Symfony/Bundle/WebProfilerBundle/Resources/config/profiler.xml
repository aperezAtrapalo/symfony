<?xml version="1.0" ?>

<container xmlns="http://makhan.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://makhan.com/schema/dic/services http://makhan.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="web_profiler.controller.profiler" class="Makhan\Bundle\WebProfilerBundle\Controller\ProfilerController">
            <argument type="service" id="router" on-invalid="null" />
            <argument type="service" id="profiler" on-invalid="null" />
            <argument type="service" id="twig" />
            <argument>%data_collector.templates%</argument>
            <argument>%web_profiler.debug_toolbar.position%</argument>
        </service>

        <service id="web_profiler.controller.router" class="Makhan\Bundle\WebProfilerBundle\Controller\RouterController">
            <argument type="service" id="profiler" on-invalid="null" />
            <argument type="service" id="twig" />
            <argument type="service" id="router" on-invalid="null" />
        </service>

        <service id="web_profiler.controller.exception" class="Makhan\Bundle\WebProfilerBundle\Controller\ExceptionController">
            <argument type="service" id="profiler" on-invalid="null" />
            <argument type="service" id="twig" />
            <argument>%kernel.debug%</argument>
        </service>

        <service id="twig.extension.webprofiler" class="Makhan\Bundle\WebProfilerBundle\Twig\WebProfilerExtension" public="false">
            <tag name="twig.extension" />
        </service>
    </services>
</container>
